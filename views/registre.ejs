<%- include('parts/top.ejs')%>

<section>
    <br>
    <br>
    <br>
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">
  
                  <form method="POST" action="/registre">
  
                    <h3 class="mb-5 text-uppercase">register</h3>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                          <div class="form">
                            <input type="text" id="form3Example1m" name="firstName" class="form-control form-control-lg" placeholder="FirstName"/>
                          </div>
                        </div>
                        <div class="col-md-6 mb-4">
                          <div class="form">
                            <input type="text" id="form3Example1n" name="lastName" class="form-control form-control-lg" placeholder="LastName" />
                          </div>
                        </div>
                      </div>
                    <div class="form">
                      <input type="email" id="form2Example17" name="email" class="form-control form-control-lg" placeholder="Email Address" />
                    </div>
                    <br>
                    <div class="form">
                      <input type="password" id="form2Example27" name="password" class="form-control form-control-lg"  placeholder="Password"/>
                    </div>
                    <br>
                    
                    <% if(message){ %>
                    <div class="alert alert-danger">
                      <%= message%>
                    </div>
                    <% } %>

                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block" type="submit">Register</button>
                    </div>
                    <a href="#!" class="small text-muted">Terms of use.</a>
                    <a href="#!" class="small text-muted">Privacy policy</a>
                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


