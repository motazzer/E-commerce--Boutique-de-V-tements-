<section class="section" id="products">
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <div class="section-heading">
                  <h2><%= category.name %> Products</h2>
              </div>
          </div>
      </div>
  </div>
  <div class="container">
      <div class="row">
          <% for(let article of articles){%>
          <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="item">
                  <% if(verifuser){ %>
                  <div class="thumb">
                      <ul>
                          <li><a href="/products/<%= article.name %>/<%= article._id %>" target="_blank">
                            <img style="height: 350px;" src="uploads/<%= article.image %>">
                              </a>
                           </li>
                      </ul>
                  </div>
                  <% }else{ %>
                  <div class="thumb">
                      <div class="hover-content">
                          <div class="inner">
                              <div class="main-border-button">
                                  <a href="/login">Login To Discover More</a>
                              </div>
                          </div>
                      </div>
                      <img style="height: 350px;" src="uploads/<%= article.image %>">
                  </div>
                  <% } %>
                  <div class="down-content">
                      <ul>
                          <li><a href="/index/<%= article._id %>" target="_blank"><h4><%= article.name%></h4></a></li>
                      </ul>
                      <span>$<%= article.price%></span>
                  </div>
              </div> 
          </div>
          <% } %>
          <div class="col-lg-12">
              <div class="pagination">
                  <ul>
                      <li>
                          <a href="#">1</a>
                      </li>
                      <li class="active">
                          <a href="#">2</a>
                      </li>
                      <li>
                          <a href="#">3</a>
                      </li>
                      <li>
                          <a href="#">4</a>
                      </li>
                      <li>
                          <a href="#">></a>
                      </li>
                  </ul>
              </div>
          </div>
      </div>
  </div>
</section>




<%- include('parts/bottom.ejs') %>